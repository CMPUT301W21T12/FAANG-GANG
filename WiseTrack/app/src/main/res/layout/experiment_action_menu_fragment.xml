<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/view_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="left"
        android:text="Subscribe" />

    <Button
        android:id="@+id/view_unpublish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="left"
        android:text="Unpublish" />

    <Button
        android:id="@+id/view_end_experiment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="left"
        android:text="End Current Experiment" />

    <Button
        android:id="@+id/view_experiment_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="left"
        android:text="View Experiment Results" />

    <Button
        android:id="@+id/view_geolocations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="left"
        android:text="View Geolocations" />

    <Button
        android:id="@+id/view_execute_trials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="left"
        android:text="Execute Trials" />

    <Button
        android:id="@+id/view_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="left"
        android:text="Comment" />

    <Button
        android:id="@+id/view_trials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="left"
        android:text="View Trials" />
</LinearLayout>