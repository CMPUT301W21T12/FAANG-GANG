<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/menuProfile_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/main_menu_ViewProfile"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

    <Button
        android:id="@+id/menuViewExperiments_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/main_menu_ViewMyExperiments"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

    <Button
        android:id="@+id/menuViewSubscriptions_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/main_menu_ViewSubscriptions"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

    <Button
        android:id="@+id/menuPublish_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/main_menu_PublishExperiments"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

    <Button
        android:id="@+id/menuSearch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/main_menu_SearchExperiments"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

    <Button
        android:id="@+id/menuSearchUser_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/main_menu_SearchUserProfile"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

    <Button
        android:id="@+id/menuScanQR_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/main_menu_ScanQRCode"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

    <Button
        android:id="@+id/menuScanBar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/main_menu_ScanBarCode"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

</LinearLayout>