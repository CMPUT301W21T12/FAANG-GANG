<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/menuProfile_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Profile"
        android:textColor="#090000"
        android:textColorHighlight="#050000"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:id="@+id/menuViewExperiments_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="View My Experiments"
        android:textColor="#090000"
        android:textColorHighlight="#050000" />

    <Button
        android:id="@+id/menuPublish_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish Experiment"
        android:textColor="#090000"
        android:textColorHighlight="#050000"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:id="@+id/menuSearch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for Experiments"
        android:textColor="#090000"
        android:textColorHighlight="#050000"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:id="@+id/menuSearchUser_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for User Profiles"
        android:textColor="#090000"
        android:textColorHighlight="#050000"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:id="@+id/menuScanQR_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:textColor="#090000"
        android:textColorHighlight="#050000"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:id="@+id/menuScanBar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Bar Code"
        android:textColor="#090000"
        android:textColorHighlight="#050000"
        android:backgroundTint="@android:color/darker_gray"/>

</LinearLayout>