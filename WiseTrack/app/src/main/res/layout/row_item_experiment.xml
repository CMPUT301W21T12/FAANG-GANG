<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?android:selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/experiment_row_item_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="ExperimentTitle"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/experiment_row_item_status_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_item_Open"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/experiment_row_item_desc_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/experiment_row_item_date_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/search_item_Date"
            android:textColor="@color/secondary_text"/>
        <TextView
            android:id="@+id/experiment_row_item_dateValue_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:textColor="@color/darker_primary_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/experiment_row_item_owner_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/search_item_Owner"
            android:textColor="@color/secondary_text"/>
        <TextView
            android:id="@+id/experiment_row_item_ownerValue_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
